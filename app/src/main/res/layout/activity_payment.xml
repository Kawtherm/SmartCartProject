<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="4dp"
        android:background="@color/sl_teal"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/btn_cancel_order"
        android:fontFamily="@font/droidkufi_bold"
        android:layout_marginTop="46dp"
        android:layout_marginStart="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_lbl_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_payment_qr"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/sl_teal"
        android:fontFamily="@font/droidkufi_bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_payment_qr"/>

    <ImageView
        android:id="@+id/iv_payment_qr"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_margin="16dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lbl_desc"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>