<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ScaleActivity">

    <ImageView
        android:layout_width="586dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/right_top_bar_b" />

    <Button
        android:id="@+id/scale_back_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@color/sl_teal"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Back"
        android:fontFamily="@font/droidkufi_bold"
        android:layout_marginTop="46dp"
        android:layout_marginStart="46dp"/>

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/scale_save_btn"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:background="@color/sl_teal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Save"
            android:layout_alignTop="@+id/scale_barcode_nb_txt"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/droidkufi_bold" />

        <TextView
            android:id="@+id/scale_barcode_nb_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item barcode"
            android:textColor="@android:color/black"
            android:fontFamily="@font/droidkufi_regular"
            android:textSize="15sp"
            android:layout_marginStart="170dp"/>

        <EditText
            android:id="@+id/scale_barcode_nb_txt"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rect_white_border_blue"
            android:textSize="22sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/scale_barcode_nb_lbl"
            android:inputType="number"/>

        <Button
            android:id="@+id/barcode_reset_btn"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:background="@color/sl_teal"
            android:textColor="@color/white"
            android:text="Reset Barcode"
            android:layout_marginBottom="16dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/scale_reset_btn"
            android:fontFamily="@font/droidkufi_bold" />

        <Button
            android:id="@+id/scale_reset_btn"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:background="@color/sl_teal"
            android:textColor="@color/white"
            android:text="Rebase Scale"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/droidkufi_bold" />
        <TextView
            android:id="@+id/scale_weight_val_lbl"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:textColor="@color/sl_teal"
            android:background="@drawable/rect_white_border_blue"
            android:textSize="48sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/droidkufi_regular"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/scale_error_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sl_red"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>