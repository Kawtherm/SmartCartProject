<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp">


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="195dp"
        android:layout_marginTop="35dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="142dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/delete_item_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_item_quest"
                android:layout_centerHorizontal="true"
                android:textColor="@color/sl_teal"
                android:fontFamily="@font/droidkufi_regular"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/delete_item_val_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item name"
                android:layout_centerInParent="true"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/sl_green"
                android:textSize="20sp"
                android:fontFamily="@font/droidkufi_regular"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/delete_item_lbl" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/delete_dlg_btn_grp"
            android:layout_width="240dp"
            android:layout_height="51dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/delete_yes_btn"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:background="@color/sl_orange"
                android:fontFamily="@font/droidkufi_regular"
                android:text="@string/exit_yes"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/delete_no_btn"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:background="@color/sl_orange"
                android:fontFamily="@font/droidkufi_regular"
                android:text="@string/exit_no"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>