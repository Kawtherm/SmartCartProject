<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerInfoActivity"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <ImageView
        android:layout_width="586dp"
        android:layout_height="86dp"
        android:src="@drawable/right_top_bar_b"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/pagefour_back_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@color/sl_teal"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Back"
        android:fontFamily="@font/droidkufi_bold"
        android:layout_marginTop="46dp"
        android:layout_marginStart="46dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="176dp">

        <Button
            android:id="@+id/one_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:text="1"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"/>

        <Button
            android:id="@+id/two_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/one_btn"
            android:layout_toEndOf="@+id/one_btn"
            android:layout_marginStart="5dp"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/three_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="3"
            android:layout_alignBottom="@+id/two_btn"
            android:layout_toEndOf="@+id/two_btn"

            android:layout_marginStart="5dp"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/four_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/one_btn"
            android:text="4"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/five_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/four_btn"
            android:layout_toEndOf="@+id/four_btn"
            android:layout_below="@+id/two_btn"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/six_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="6"
            android:layout_below="@+id/one_btn"
            android:layout_alignBottom="@+id/five_btn"
            android:layout_toEndOf="@+id/five_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/seven_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/four_btn"
            android:text="7"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/eight_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/seven_btn"
            android:layout_toEndOf="@+id/seven_btn"
            android:layout_below="@+id/five_btn"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/nine_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="9"
            android:layout_below="@+id/six_btn"
            android:layout_alignBottom="@+id/eight_btn"
            android:layout_toEndOf="@+id/eight_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textSize="45sp"
            android:textColor="@color/white"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/seven_btn"
            android:visibility="invisible"
            android:text="+"
            android:textSize="45sp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/zero_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/plus_btn"
            android:layout_toEndOf="@+id/plus_btn"
            android:layout_below="@+id/eight_btn"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/delete_nb_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="X"
            android:layout_below="@+id/nine_btn"
            android:layout_alignBottom="@+id/zero_btn"
            android:layout_toEndOf="@+id/zero_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textSize="45sp"
            android:textColor="@color/sl_teal"
            android:background="@android:color/white"
            android:fontFamily="@font/droidkufi_bold"
            android:stateListAnimator="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page_four_user_input"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="100dp"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidkufi_regular"
                android:lineSpacingMultiplier="0.6"
                android:text="@string/lbl_email"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/email_txt"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_below="@id/email_lbl"
                android:background="@drawable/rect_white_border_blue"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/email_optional_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/optional"
                android:layout_below="@id/email_txt"
                android:lineSpacingMultiplier="0.6"
                android:textColor="@android:color/black"
                android:fontFamily="@font/droidkufi_regular"
                android:textSize="12sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/whatsapp_nb_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_container"
            android:fontFamily="@font/droidkufi_regular"
            android:lineSpacingMultiplier="0.6"
            android:text="@string/whatsapp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/whatsapp_nb_txt"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_below="@+id/whatsapp_nb_lbl"
            android:background="@drawable/rect_white_border_blue"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/mobile_optional_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatsapp_nb_txt"
            android:fontFamily="@font/droidkufi_regular"
            android:lineSpacingMultiplier="0.6"
            android:text="@string/optional"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/membership_nb_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_optional_lbl"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/droidkufi_regular"
            android:lineSpacingMultiplier="0.6"
            android:text="@string/membership_no"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/membership_optional_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/membership_nb_txt"
            android:fontFamily="@font/droidkufi_regular"
            android:lineSpacingMultiplier="0.6"
            android:text="@string/optional"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/membership_nb_txt"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_below="@+id/membership_nb_lbl"
            android:background="@drawable/rect_white_border_blue"
            android:textSize="22sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="number"/>

        <Button
            android:id="@+id/pagefour_next_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@+id/membership_optional_lbl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:background="@color/sl_teal"
            android:fontFamily="@font/droidkufi_bold"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:src="@drawable/logo_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>